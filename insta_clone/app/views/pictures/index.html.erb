
<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-6">

  <% if @pictures.any? %>
  <% @pictures.each do |pic| %>

  <h4><%= link_to (image_tag pic.image.url(:medium)), picture_path(pic) %></h4>
  <h4><%=  %></h4>

  <i class="fa fa-user" aria-hidden="true"></i> <%= pic.user.email %>
  <h4><i class="fa fa-map-marker" aria-hidden="true"> </i> <%= pic.location %></h4>
  <h4><i class="fa fa-heart" aria-hidden="true"></i> <%= pic.likes.count %></h4>
  <h4> <%= link_to 'Like', picture_likes_path(pic),  method: :post %></h4>
  
  <h4><%= link_to "Edit #{pic.caption}", edit_picture_path(pic) %></h4>
  <h4><%= link_to "Delete #{pic.caption}", picture_path(pic), method: :delete %></h4>



  <% end %>



  <% else %>
  <p> No pictures yet </p>
  <% end %>





  <a href='/pictures/new'> Post a picture</a>
  </div>
  <div class="col-xs-3"></div>
</div>
