

<div class="container">
  <% if @pictures.any? %>
  <% @pictures.each do |pic| %>

   <div class="row">
     <div class="col s12 m7">
       <div class="card">
         <div class="card-image">
           <h4><%= image_tag pic.image.url(:thumb) %></h4>
         </div>

          <div class="card-content">
            <i class="fa fa-user" aria-hidden="true"></i> <%= pic.user.email %>
            <h6><i class="fa fa-map-marker" aria-hidden="true"> </i> <%= pic.location %></h6>
          </div>
          <div class="card-action">
            <h6> <%= link_to '<i class="fa fa-heart" aria-hidden="true"></i>'.html_safe, picture_likes_path(pic),  method: :post %><%= pic.likes.count %></h6>

          </div>
        <div class="card-action">
          <h6><%= link_to "Comment #{pic.caption}", picture_path(pic) %></h6>
        </div>
        <div class="card-action">
          <h6><%= link_to "Edit #{pic.caption}", edit_picture_path(pic) %></h6>
        </div>
        <div class="card-action">
          <h6><%= link_to "Delete #{pic.caption}", picture_path(pic), method: :delete %></h6>
        </div>

   </div>
 </div>
</div>

  <% end %>



  <% else %>
  <p> No pictures yet </p>
  <% end %>





  <a href='/pictures/new'> Post a picture</a>
</div>
